<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/post_file_bg">

    <ImageView
        android:id="@+id/avatar_left"
        android:layout_width="@dimen/post_avatar_size"
        android:layout_height="@dimen/post_avatar_size"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_avatar_demo2"/>

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/avatar_right"
        android:layout_toEndOf="@id/avatar_left"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="这里显示的是文件名"/>

    <ImageView
        android:id="@+id/avatar_right"
        android:layout_width="@dimen/post_avatar_size"
        android:layout_height="@dimen/post_avatar_size"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_avatar_demo2"/>

    <TextView
        android:id="@+id/file_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/avatar_right"
        android:layout_toEndOf="@id/avatar_left"
        android:layout_below="@id/avatar_left"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Click to open"/>
</RelativeLayout>
